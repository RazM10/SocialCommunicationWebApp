@model SocialCommunicationWebApp.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "../Shared/_LayoutUser.cshtml";
    if (Session["email"] != null)
    {
        Response.Redirect("Home");
    }
}

@section navBarRight{
    <li>@Html.ActionLink("Register", "New", "User")</li>
    <li>@Html.ActionLink("Log in", "Login", "User")</li>
}

<h2>Log In</h2>
@using (Html.BeginForm("Login", "User"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "example@gmail.com" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>



    @*@Html.HiddenFor(x => x.Customer.Id)*@
    <button type="submit" class="btn btn-primary">Submit</button>
}

