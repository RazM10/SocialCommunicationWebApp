@model IEnumerable<SocialCommunicationWebApp.Models.User>
@{
    ViewBag.Title = "Home";
}

@Html.ActionLink("Logout", "Logout", "User")<br />
<p>@Html.ActionLink("Requests", "FriendRequest", "User") (@ViewBag.FrendRequestNumbers)</p>
<p>@Html.ActionLink("Friends List", "FriendsList", "User") (@ViewBag.NumberOfFriends)</p>
<h2>Home</h2>
<h1>User Mail: @Session["email"].ToString()</h1>
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                @*<td>@Html.ActionLink(c.Name, "Edit", "Customer", new { id = c.Id }, null)</td>*@
                <td>@c.Email</td>
                @*<td>@Html.ActionLink("Add Friend", "FriendRequest", "Friend", new { id = c.Id }, null)</td>*@
                <td><a href="@Url.Action("FriendRequest","Friend",new {id=c.Id})" class="btn btn-primary">Add Friend</a></td>
            </tr>
        }
    </tbody>
</table>

